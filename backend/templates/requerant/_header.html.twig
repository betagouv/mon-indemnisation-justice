<header role="banner" class="fr-header">
    <div class="fr-header__body">
        <div class="fr-container">
            <div class="fr-header__body-row">
                <div class="fr-header__brand fr-enlarge-link">
                    <div class="fr-header__brand-top">
                        <div class="fr-header__logo">
                            <p class="fr-logo">Ministère<br>justice</p>
                        </div>
                        {# Bouton d'ouverture du menu mobile #}
                        <div class="fr-header__navbar">
                            <button class="fr-btn--menu fr-btn" data-fr-opened="false" aria-controls="modale-menu"
                                    id="button-500" title="Menu">
                                Menu
                            </button>
                        </div>
                    </div>
                    <div class="fr-header__service">
                        <a href="{{ url('requerant_home_dossiers') }}" title="Mon Indemnisation Justice"></a>
                        <p class="fr-header__service-title">Mon Indemnisation Justice</p>
                        {% if app.environment != 'prod' %}
                            <div>
                                <p class="fr-badge fr-badge--warning fr-badge--no-icon">Plateforme de test</p>
                            </div>
                        {% endif %}
                    </div>
                </div>
                <div class="fr-header__tools">
                    <div class="fr-header__tools-links">
                        <ul class="fr-btns-group">
                            <li>
                                <a class="fr-btn fr-icon-user-line"
                                   href="{{ url('requerant_home_index') }}">{{ app.user.personnePhysique.prenom1 }} {{ app.user.personnePhysique.nom|capitalize }}
                                </a>
                            </li>
                            <li>
                                <a class="fr-btn fr-icon-logout-box-r-line"
                                   href="{{ app.user|url_deconnexion(app.request) }}">
                                    Déconnexion
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        {#  Version mobile #}
        <div class="fr-header__menu fr-modal" id="modale-menu" aria-labelledby="button-500">
            <div class="fr-container">
                <button class="fr-btn--close fr-btn" aria-controls="modale-menu" title="Fermer">
                    Fermer
                </button>
                <div class="fr-header__menu-links">
                    <ul class="fr-btns-group">
                        <li>
                            <a class="fr-btn fr-icon-user-line"
                               href="{{ url('requerant_home_index') }}">{{ app.user.personnePhysique.prenom1 }} {{ app.user.personnePhysique.nom|capitalize }}
                            </a>
                        </li>
                        <li>
                            <a class="fr-btn fr-icon-logout-box-r-line"
                               href="{{ app.user|url_deconnexion(app.request) }}">
                                Déconnexion
                            </a>
                        </li>
                    </ul>
                </div>

                {# Menu principal #}
                <nav id="fr-header-main-navigation" class="fr-nav" role="navigation" aria-label="Menu principal">
                    <ul class="fr-nav__list">
                        <li class="fr-nav__item" data-fr-js-navigation-item="true">
                            <a href="{{ url('requerant_home_dossiers') }}" class="fr-nav__link">Mes demandes</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</header>