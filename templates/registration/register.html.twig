{% extends 'base.html.twig' %}

{% block title %}{{'register.title'|trans}}{% endblock %}

{% block body %}
{% set errors = registrationForm.vars.errors.form.getErrors(true) %}
<main class="fr-pt-md-14v" role="main" id="content">
  <div class="fr-container fr-container--fluid fr-mb-md-14v">
    <div class="fr-grid-row fr-grid-row-gutters fr-grid-row--center">
      {% for flash_error in app.flashes('verify_email_error') %}
      <div class="fr-col-12 fr-col-md-8 fr-col-lg-6">
        <div class="fr-alert fr-alert--error">
          <h3 class="fr-alert__title">{{'register.error.title'|trans}}</h3>
          <p>{{ flash_error }}</p>
        </div>
      </div>
      {% endfor %}
      {% for error in errors %}
      <div class="fr-col-12 fr-col-md-8 fr-col-lg-6">
        <div class="fr-alert fr-alert--error">
          <h3 class="fr-alert__title">{{'register.error.title'|trans}}</h3>
          <p>{{ error.message|trans }}</p>
        </div>
      </div>
      {% endfor %}

      <div class="fr-col-12 fr-col-md-8 fr-col-lg-6">
        <div class="fr-container fr-background-alt--grey fr-px-md-0 fr-py-10v fr-py-md-14v">
          <div class="fr-grid-row fr-grid-row-gutters fr-grid-row--center">
            <div class="fr-col-12 fr-col-md-9 fr-col-lg-8">
              <div>
                  {{ form_start(registrationForm) }}
                  <fieldset class="fr-fieldset">
                    {{form_label(registrationForm.email)}}
                    {{ form_widget(registrationForm.email) }}
                  </fieldset>
                  <fieldset class="fr-fieldset">
                    {{form_label(registrationForm.plainPassword)}}
                    {{form_widget(registrationForm.plainPassword)}}
                  </fieldset>
                  <fieldset class="fr-fieldset">
                    {{ form_row(registrationForm.agreeTerms) }}
                  </fieldset>
                  <button type="submit" class="fr-btn">{{'register.title'|trans}}</button>
              {{ form_end(registrationForm) }}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>







{% endblock %}
