{% extends 'base.html.twig' %}

{% block title %}Bris de porte : cr√©ation de mon compte{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /** Hack: maintenir les input de type checkbox et radio "cliquables". */
        input[type=radio], input[type=checkbox] {
            z-index: 2;
        }

        .pr-keyboard-hands .pic-keyboard-hands {
            background-image: url('{{ asset("images/picture/pic_keyboard-hands.jpg") }}');
            background-repeat: no-repeat;
            background-position: center;
            background-size: auto 100%;
            height: 870px;
            width: 100%;
        }

        .pr-form-subscribe {
            border: 1px solid var(--pr-color-grey);
        }

        .pr-form-subscribe_had-account {
            border-bottom: 1px solid var(--pr-color-grey);
        }


        .pr-form-subscribe, .pr-form-subscribe_had-account {
            border-bottom: 1px solid var(--pr-color-grey);
        }

        /** Bouton afficher / masquer le mot de passe */
        button.fr-btn--input-overlay {
            padding: 0;
            position: absolute;
            display: flex;
            flex-direction: column;
            justify-content: center;
            right: .5rem;
            bottom: 0.75rem;
            width: 2rem;
            height: 2rem;
            --icon-size: 1rem;
            margin: auto;
            pointer-events: all;
            z-index: 10;
            background-color: transparent;
        }

        button.fr-btn--input-overlay:hover {
            background-color: transparent !important;
        }

        button.fr-btn--input-overlay *:hover {
            background-color: transparent;
            color: inherit;
        }

        [v-cloak] {
            display: none !important;
        }
    </style>
{% endblock %}

{% block main %}
    <div id="react-app"></div>
{% endblock main %}


{% block javascripts %}
    <script id="react-arguments" type="application/json">
    {{ react|default({})|json_encode()|raw }}

    </script>


    {% if est_vite_server_actif() %}
        {% include '_vite_hmr_extra.html.twig' %}
    {% endif %}

    {{ vite_entry_script_tags('requerant/dossier/creation_de_compte') }}

    {{ parent() }}

{% endblock javascripts %}