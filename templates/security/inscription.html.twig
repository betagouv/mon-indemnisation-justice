{% extends 'base_react.html.twig' %}

{% set title = 'Cr√©er un compte' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
      /** Hack: maintenir les input de type checkbox et radio "cliquables". */

      input[type=radio],input[type=checkbox] {
        z-index: 2;
      }
    </style>
{% endblock %}

{% block main %}
  {% set csrf_token = csrf_token('authenticate') %}
  {% set user = app.user is not null ? app.user : empty_user() %}
  <div {{ stimulus_controller('security_inscription',{
    user: user|serialize('json',{groups: 'user:read'}),
    csrfToken: csrf_token,
  }) }}></div>
{% endblock %}
