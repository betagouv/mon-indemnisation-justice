{% extends'agent/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <style>
        main {
            margin-top: 2rem;
            margin-bottom: 2rem;
        }
    </style>
{% endblock stylesheets %}

{% block modale %}
    {{ parent() }}
    {% set flash = app.flashes('success')|first %}
    {% if flash %}
        <dialog aria-labelledby="fr-modal-flash-success" role="dialog" id="fr-modal-flash-success"
                class="fr-modal fr-modal--opened">
            <div class="fr-container fr-container--fluid fr-container-md">
                <div class="fr-grid-row fr-grid-row--center">
                    <div class="fr-col-12 fr-col-md-8 fr-col-lg-6">
                        <div class="fr-modal__body">
                            <div class="fr-modal__header">
                                <button class="fr-btn--close fr-btn" title="Fermer la fenÃªtre modale"
                                        aria-controls="fr-modal-flash-success">Fermer
                                </button>
                            </div>
                            <div class="fr-modal__content">
                                <div class="fr-alert fr-alert--success">
                                    <h3 class="fr-alert__title">{{ flash.title }}</h3>
                                    <p>{{ flash.message }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </dialog>
    {% endif %}
{% endblock modale %}

{% block main %}

    <div class="fr-container fr-container--fluid">
        <div class="fr-grid-row">

            <div class="fr-col-12">
                {% block contenu %}
                {% endblock contenu %}
            </div>
        </div>


    </div>
{% endblock main %}